@model IEnumerable<Neptun.Models.Production>

@{
    ViewBag.Title = "AdminInfo";
}
<div class="container">
    <h3>Продукция</h3>

    <p>
        @Html.ActionLink("Добавить", "Create")
    </p>
    <p>
        @Html.ActionLink("К виду пользователя", "Index")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                <text>PDF</text>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductType)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ButtonDescriptionName))
                    {
                    <a href='@Url.Action("DisplayPdf", "Productions", new {id = item.Id})' Onclick="window.open('@Url.Action("DisplayPdf", "Productions", new {id = item.Id})', target='_blank')">@Html.DisplayFor(modelItem => item.ButtonDescriptionName)</a>
                    }
                    else
                    {
                        <p>Нету</p>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductType);
                </td>
                <td>
                    @Html.ActionLink("Изменить", "Edit", new { id = item.Id })
                    @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
                    @Html.ActionLink("Описание", "Info", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>
