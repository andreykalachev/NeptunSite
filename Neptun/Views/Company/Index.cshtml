@using Neptun.Models.Enum
@model Neptun.Models.ViewModels.ContactsViewModel

@{
    Layout = "";
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/content/header.css" type="text/css">
    <link rel="stylesheet" href="/content/contacts.css" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
    <meta name="keywords" content="Сотрудники, контакты, связь, обратная связь, адрес, Одесса, Украина" />
    <meta name="description" content='Торговый дом Одесского завода "Нептун". Вы можете свзязаться с нами по поводу заказа продукции или уточнения информаии.' />
    <link rel="icon" href="/favicon.ico" />
    <link rel="canonical" href="http://neptun-odessa.com/Company" />
    <title>Нептун | Контакты: +380-482-308-100, Україна, Одеська обл., с. Усатове</title>
</head>

<body>
    <header>
        <div class="header-container">
            <input type="checkbox" id="menu-checkbox">
            <nav>
                <label for="menu-checkbox" class="toggle-button" data-open="МЕНЮ" data-close="ЗАКРЫТЬ"></label>
                <ul class="main-menu">
                    <li>
                        <a href="@Url.Action("Index", "Home")">ГЛАВНАЯ</a>
                    </li>
                    <li class="dropdown">
                        <label for="dropdown-checkbox" id="#dropdown-label">ПРОДУКЦИЯ</label>
                        <input type="checkbox" id="dropdown-checkbox">
                        <div>
                            <ul>
                                <li>
                                    <a href="@Url.Action("Index", "Productions")">Вся продукция</a>
                                </li>
                                <hr>
                                <li>
                                    <a href="@Url.Action("Index", "Productions", new {productType = ProductType.HfProcessing})">ВЧ Обработка</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Index", "Productions", new {productType = ProductType.HfCommunication})">ВЧ Связь</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Index", "Productions", new {productType = ProductType.HfProtection})">ВЧ Защита</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Cabinets", "Productions")">Шкафы</a>
                                </li>
                                <hr>
                                <li>
                                    <a href="@Url.Action("TreatmentFacilities", "Productions")">Очистные сооружения</a>
                                </li>
                                <hr>
                                <li>
                                    <a href="@Url.Action("Index", "Productions", new {productType = ProductType.Other})">Прочее</a>
                                </li>
                            </ul>
                        </div>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "News")">НОВОСТИ</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Company")">КОНТАКТЫ</a>
                    </li>
                    <li>
                        <a href="" onclick="window.open('/Pdf/Reference.pdf','_blank');">РЕФЕРЕНС</a>
                    </li>
                </ul>
            </nav>
        </div>
    </header>
    <main>
        <div class="top-slide">
            <div class="contacts">
                <h3>Контакты</h3>
                <address>
                    <p>
                        <strong>Телефон:</strong>
                        @Html.DisplayFor(model => model.Company.PhoneNumber)
                    </p>

                    <p>
                        <strong>Email:</strong>
                        @Html.DisplayFor(model => model.Company.Email)
                    </p>
                    <p>
                        <strong>Адрес:</strong>
                        @Html.DisplayFor(model => model.Company.Address)
                    </p>
                </address>
            </div>
        </div>
        <div class="page-container">
            <h1>ООО "Торговый дом Одесского завода "Нептун"</h1>
            <section class=emloyees>
                @foreach (var item in Model.Employees)
                {
                    <div class="emloyee-card">
                        <p>@Html.DisplayFor(modelItem => item.Position)</p>
                        <img src="@item.Photo" alt="@Html.DisplayFor(modelItem => item.LastName) @Html.DisplayFor(modelItem => item.FirstName)">
                        <p>@Html.DisplayFor(modelItem => item.LastName) @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.Patronymic)</p>
                        <p>@Html.DisplayFor(modelItem => item.PhoneNuber)</p>
                        <p>@Html.DisplayFor(modelItem => item.Email)</p>
                    </div>
                }
            </section>
            <section class="feedback" id="feedback">
                <h1>Обратная связь</h1>
                <form id="feedback-form">
                    <div class="form-group">
                        <label for="firstName">Имя</label>
                        <input id="firstName" data-validate="false" data-correct-message="Имя" data-maxLenght-message="слишком длинное имя">
                    </div>
                    <div class="form-group">
                        <label for="lastName">Фамилия</label>
                        <input id="lastName" data-validate="false" data-correct-message="Фамилия" data-maxLenght-message="слишком длинная фамилия">
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input id="email" data-validate="false" data-incorrect-message="некорректный email" data-correct-message="Email" data-maxLenght-message="слишком длинный email">
                    </div>
                    <div class="form-group">
                        <label for="phone-number">Телефон <small>(не обязательно)</small></label>
                        <input id="phone-number" data-validate="true" data-incorrect-message="некорректный телефон" data-correct-message="Телефон (не обязательно)">
                    </div>
                    <div class="form-group">
                        <label for="message">Сообщение</label>
                        <textarea id="message" rows="2" max-rows="50" data-validate="false" data-correct-message="Сообщение" data-maxLenght-message="слишком длинное сообщение"></textarea>
                    </div>
                    <button id="feedback-submit-btn" type="submit">Отправить</button>
                </form>
            </section>
            <section class="map">
                <h3>Ищите нас на карте!</h3>
                <div id="map"></div>
            </section>
    </div>
</main>
</body>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://code.jquery.com/ui/1.12.0/jquery-ui.min.js" integrity="sha256-eGE6blurk5sHj+rmkfsGYeKyZx3M4bG+ZlFyA7Kns7E="
        crossorigin="anonymous"></script>
<script src="/scripts/user/header-script.js" type="text/javascript"></script>
<script src="/scripts/user/contacts.js" type="text/javascript"></script>
<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBRBMFTA3uiUZiFGZEqCTzVfZ_H6-RaSpQ&callback=initMap"></script>
</html>
