@model IEnumerable<Neptun.Models.News>

@{
    ViewBag.Title = "Index";
}

<div class="container">

    <h1 class="display-2">Новости</h1>

    @foreach (var item in Model)
    {
        <hr>
        <div class="col-md-12">
            <h1>@item.Title</h1>
            <p>@item.Description</p>
            <div>
                <span class="badge">@Html.DisplayFor(modelItem => item.Date)</span>
            </div>
        </div>
    }
</div>
